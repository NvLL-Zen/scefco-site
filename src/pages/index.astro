---
import Main from "../layouts/main.astro";
import Section from "../components/section.astro";
import Nav from "../components/nav.astro";
import Logo_SC from '../images/logo_sc_putih.jpg'
import Image from "astro/components/Image.astro";
import "../styles/style.css";
---

<Main>
    <Nav id="nav" />
    <Section id="section-home">
        <div id="timer">
            <h1 class="countdownText" id="days"></h1>
            <h1 class="countdownDot">:</h1>
            <h1 class="countdownText" id="hours"></h1>
            <h1 class="countdownDot">:</h1>
            <h1 class="countdownText" id="minutes"></h1>
            <h1 class="countdownDot">:</h1>
            <h1 class="countdownText" id="seconds"></h1>
        </div>
        <!-- <h1 class="countdownText" id="countdown"></h1> -->
    </Section>
    <Section id="section-tentang">
        <Image src={Logo_SC} alt="LOGO SC" id="sc-pic" class="tentang">(LOGO SC)</Image>
        <h2 id="tentang-title" class="tentang">Tentang SCEFCO</h2>
        <p id="tentang-paragraph" class="tentang">
            SCEFCO atau SINAR CENDEKIA FESTIVAL and COMPETITION adalah event tahunan Sekolah Sinar Cendekia dalam rangka
            merayakan dan menyambut ulang tahunnya yaitu pada tanggal 11 November
            berupa ajang perlombaan yang terbuka untuk seluruh sekolah di area
            jabodetabek(Jakarta-Bogor-Depok-Tangerang-Bekasi)
        </p>
    </Section>
    <Section id="section-lomba" class="section-lomba">
        <h1 id="lomba-title" class="section-lomba">(Daftar Lomba)</h1>
    </Section>
    <script src="../scripts/countdown.js"></script>
</Main>
